count = 0
f, r = (def():
	def fake_increment():
		# this pattern no longer allowed, compiler throws an error since you probably forgot nonlocal definition
		# count += 1
		pass
	def real_increment():
		nonlocal count
		count += 1
	return fake_increment, real_increment
)()

f()
assert.equal(count, 0)
r()
assert.equal(count, 1)

