# decorators
def makebold(fn):
	def wrapped(arg):
		return "<b>" + fn(arg) + "</b>"
	return wrapped

def makeitalic(fn):
	def wrapped(arg):
		return "<i>" + fn(arg) + "</i>"
	return wrapped

@makebold
@makeitalic
def hello(something):
	return "hello " + something

assert.equal(hello("world"), "<b><i>hello world</i></b>")

